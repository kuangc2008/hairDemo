        <activity
            android:name="com.qihoo.hair.activity.DetailActivity"
            >

        </activity>

        <activity
            android:name="com.qihoo.hair.activity.MainActivity"
            android:theme="@style/Theme.DEMO"
            android:windowSoftInputMode= "adjustResize|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>

        <activity android:name="com.qihoo.hair.activity.SearchResultActivity"/>

        <activity android:name="com.qihoo.hair.activity.ScaleImageViewAcitivyt"></activity>
