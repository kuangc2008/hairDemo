<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/search_result_list_item_color"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/head"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@drawable/search_head"/>

    <RelativeLayout
        android:id="@+id/first_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head"
        android:layout_alignTop="@id/head"
        android:layout_marginLeft="5dip">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="艺往理发师A"/>

        <ImageView
            android:id="@+id/dollar_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name"
            android:layout_marginLeft="5dip"
            android:background="@drawable/dollar_sign"/>

        <TextView
            android:id="@+id/hearts_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="15"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hearts"
            android:layout_toLeftOf="@+id/hearts_number"
            />
        </RelativeLayout>

    <TextView
        android:id="@+id/grade"
        android:layout_below="@id/first_line"
        android:layout_alignLeft="@id/first_line"
        android:layout_marginTop="4dip"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5/5.0(1000条评论)"/>

    <TextView
        android:id="@+id/address"
        android:layout_below="@id/grade"
        android:layout_alignLeft="@id/grade"
        android:textColor="@color/black"
        android:layout_marginTop="6dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朝阳区酒仙桥路1号"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15Km"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/location_arrow"
        android:layout_below="@id/address"
        android:layout_alignLeft="@id/address"/>

    <TextView
        android:id="@+id/photos_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_line"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dip"
        android:text="100"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/photos"/>
</RelativeLayout>