<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f3f5"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/bobo141007095530591" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#C3C3C3" />

            <RelativeLayout
                android:id="@+id/about_version"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:background="@drawable/list_item_bkg" >

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:duplicateParentState="true"
                    android:textColor="@drawable/black_white_text_color_selector"
                    android:text="V 1.0"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/about_version_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/about_arrow"
                    android:duplicateParentState="true"
                    android:src="@drawable/version_new"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/about_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#C3C3C3" />

            <RelativeLayout
                android:id="@+id/about_agreement"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:background="@drawable/list_item_bkg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:duplicateParentState="true"
                    android:text="@string/setting_agreement"
                    android:textColor="@drawable/black_white_text_color_selector"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#C3C3C3" />

            <RelativeLayout
                android:id="@+id/about_introduction"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:background="@drawable/list_item_bkg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:duplicateParentState="true"
                    android:text="@string/setting_introduction"
                    android:textColor="@drawable/black_white_text_color_selector"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#C3C3C3" />

            <RelativeLayout
                android:id="@+id/about_help"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:background="@drawable/list_item_bkg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:duplicateParentState="true"
                    android:text="@string/setting_help"
                    android:textColor="@drawable/black_white_text_color_selector"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#C3C3C3" />
            
            <RelativeLayout
                android:id="@+id/official_weibo"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:background="@drawable/list_item_bkg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:duplicateParentState="true"
                    android:text="@string/setting_official_weibo"
                    android:textColor="@drawable/black_white_text_color_selector"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>            

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#C3C3C3" />

            
        </LinearLayout>
    </ScrollView>

</LinearLayout>